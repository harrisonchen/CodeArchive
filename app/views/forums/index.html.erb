<% provide(:title, "Forums") %>
<h1 class="center">Forums</h1>

<% if signed_in? %>
	<div class="center">
		<%= link_to 'Create a new forum!', new_forum_path %>
	</div>
<% end %>

<% if @forums.any? %>
	<h2>Category</h2>
	<% @forums.each do |forum| %>
		<h4 class="forum-list"><%= link_to "#{forum.category} (#{pluralize(forum.threadposts.count, 'thread')})", forum_path(forum.id) %></h4>
	<% end %>
<% end %>